{{#each this}}
  <li class='gallery-item'>
    <div class='photo-card'>

      <div class='thumb'>


          {{#if poster_path}}
            <img  class="image-thumb"
            src='https://www.themoviedb.org/t/p/w300{{poster_path}}' loading='lazy' data-movie-id='{{id}}' />
          {{else}}
          <img  class="image-thumb" src="https://sd.keepcalms.com/i-w600/sorry-no-picture-available-2.jpg" loading='lazy' data-movie-id='{{id}}' alt="no-image-available-400x265" >

         
          {{/if}}
          </div>
     
      </div>
      <!--  <p class="title">
            {{title}}
        </p>-->
    <div class="card-wrap">
      {{#if title}}
        <p class='card-title'>{{title}}</p>
      {{else}}<p class='card-text'>Unknow</p>
      {{/if}}

      <div class='card-data'>
        <p class='card-genre card-text'>
          {{genres}}
        </p>
        <!-- <p class="info-item">
            {{release_date}}
        </p>-->

        {{#if release_date}}
          <p class='card-year card-text'> | {{release_date}}</p>
        {{else}}<p class='card-text'> | N/A</p>
        {{/if}}
        <p class='film-vote'>
          {{vote_average}}
        </p>

      </div>
    </div>
    </div></li>
{{/each}}